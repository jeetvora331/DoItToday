{
    "manifest_version": 3,
    "name": "DoItToday!",
    "version": "1",
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["Content.js"]
      }
    ],

    "options_page": "options.html",
    "web_accessible_resources": [
        {
            "resources": [ "options.html" ],
            "matches": [ "<all_urls>" ]
        }
      ],

    "permissions": [
      "https://www.youtube.com/",
      "https://www.facebook.com/",
      "https://www.netflix.com/",
      "https://www.twitter.com/"
    ]
  }